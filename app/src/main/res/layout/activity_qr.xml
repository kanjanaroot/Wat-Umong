<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/iphone6"
    android:orientation="vertical"
    android:padding="10dp">

    <Button
    android:id="@+id/button_gi"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:text="General Information"
        android:layout_gravity="center"
        android:background="#ef9128"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/button_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Read QR code"
        android:layout_gravity="center"
        android:background="#ef9128"
        android:layout_margin="10dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AutoFocus"
            />
        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Use Flash"
            android:layout_alignParentRight="true"

            />



        <Switch
            android:id="@+id/auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2572bc"
            android:layout_toRightOf="@+id/text1"
            android:layout_margin="1dp"
            />

        <Switch
            android:id="@+id/use"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#2572bc"
            android:layout_toLeftOf="@id/text2"
            android:layout_margin="1dp"
            />
    </RelativeLayout>





    <Button
    android:id="@+id/button_quiz"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="QUIZ"
    android:layout_gravity="center"
    android:background="#ef9128"
    android:layout_margin="10dp"

    />

</LinearLayout>